<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.loanshield.Step2Controller"
      spacing="15" alignment="CENTER" padding="20">

    <Label text="Step 2: Enter Your Details" style="-fx-font-size: 18px;"/>

    <!-- Example input fields -->
    <TextField fx:id="fullNameField" promptText="Full Name" />
    <TextField fx:id="emailField" promptText="Email Address" />
    <TextField fx:id="phoneField" promptText="Phone Number" />

    <Button text="Back" onAction="#handleBack" minWidth="100"/>
    <Button text="Next" onAction="#handleNext" minWidth="100"/>

</VBox>
