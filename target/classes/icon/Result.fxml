<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.loanshield.ResultsController"
      stylesheets="@/css/style.css"
      spacing="20" alignment="TOP_CENTER"
      prefWidth="600" prefHeight="400">

    <Label text="Loan Evaluation Results"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label fx:id="scoreLabel" style="-fx-font-size: 48px; -fx-font-weight: bold;" />

    <Label fx:id="summaryLabel" wrapText="true" maxWidth="500" />

    <Button text="Start Over" onAction="#handleRestart"/>
</VBox>
