<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.loanshield.Step3Controller"
      stylesheets="@/css/style.css"
      spacing="20" alignment="TOP_CENTER"
      prefWidth="600" prefHeight="400">

    <Label text="Step 3: Financial & Credit Information"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>

        <Label text="Existing Loans?" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <CheckBox fx:id="hasExistingLoansCheck" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Loan Amount (LKR):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="loanAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Monthly Loan Payments (LKR):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="monthlyPaymentsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Credit Score:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="creditScoreField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Back" onAction="#handleBack"/>
        <Button text="Next" onAction="#handleNext"/>
    </HBox>
</VBox>
