<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.loanshield.Step4Controller"
      stylesheets="@/css/style.css"
      spacing="20" alignment="TOP_CENTER"
      prefWidth="600" prefHeight="400">

    <Label text="Step 4: Loan Request Details"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>
        <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>

        <Label text="Loan Purpose:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="loanPurposeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Loan Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="loanAmountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Loan Term (Years):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="loanTermField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Back" onAction="#handleBack"/>
        <Button text="Submit" onAction="#handleSubmit"/>
    </HBox>
</VBox>
