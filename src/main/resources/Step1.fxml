<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fx:controller="com.controller.Step1Controller"
      xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="800" prefHeight="800"
      stylesheets="@/css/style.css"
      fitToWidth="true">

    <!-- ✅ Main container wrapping ALL content -->
    <VBox spacing="30" alignment="TOP_CENTER">

        <!-- HEADER -->
        <VBox fx:id="header" styleClass="header" spacing="10">
            <HBox alignment="TOP_LEFT" spacing="10">
                <Label text="LoanShield" styleClass="logo"/>
            </HBox>

            <VBox alignment="CENTER" spacing="15">
                <Label text="Smart Loan Evaluation. Instant Feedback." styleClass="title"/>
                <Button text="➕ Apply for a Loan" styleClass="apply-button"/>
            </VBox>
        </VBox>

        <!-- Feature Highlights Section -->
        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="10" styleClass="feature-card">
                <Label text="How it Works" styleClass="feature-title"/>
                <Label text="Submit your application online and get instant risk assessment with personalized recommendations." wrapText="true"/>
            </VBox>

            <VBox spacing="10" styleClass="feature-card">
                <Label text="Why Use LoanShield" styleClass="feature-title"/>
                <Label text="Fast processing, accurate risk evaluation, and compliance with Sri Lankan banking regulations for better loan decisions." wrapText="true"/>
            </VBox>

            <VBox spacing="10" styleClass="feature-card">
                <Label text="Secure and Paperless" styleClass="feature-title"/>
                <Label text="Bank-grade security, encrypted data transmission, and a fully paperless process." wrapText="true"/>
            </VBox>
        </HBox>

        <!-- FORM SECTION -->
        <VBox fx:id="mainContent" spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Personal Information -->
            <Label text="Step 1: Personal Information"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>

                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="NIC Number:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="nicField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Mobile Number:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="mobileField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Email Address:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </GridPane>

            <!-- Employment Section -->
            <Label text="Step 1: Employment And Job Details"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>

                <Label text="Employment Type:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="employmentTypeField" promptText="Government Employee" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Job Title:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="jobTitleField" promptText="Senior Software Engineer" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Duration Of Employment:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="employmentDurationField" promptText="3 Years 6 Months" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Monthly Income (LKR):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="monthlyIncomeField" promptText="125,000" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>
        </VBox>

    </VBox>
</ScrollPane>
