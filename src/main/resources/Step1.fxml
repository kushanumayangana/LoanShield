<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:controller="com.controller.Step1Controller"
            xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="800" prefHeight="800"
            stylesheets="@/css/style.css"
            fitToWidth="true">

    <content>
        <VBox spacing="40" alignment="TOP_CENTER" styleClass="app-page-bg">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- HEADER -->
            <VBox fx:id="header" styleClass="header" spacing="0">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <HBox alignment="TOP_LEFT" spacing="10">
                    <Label text="LoanShield" styleClass="logo"/>
                </HBox>

                <VBox alignment="CENTER" spacing="20" styleClass="header-content">
                    <Label text="Smart Loan Evaluation. Instant Feedback." styleClass="header-title"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="+ Apply for a Loan" styleClass="apply-button"/>
                        <Button text="Search Applications" onAction="#handleOpenSearch" styleClass="submit-button"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Feature Highlights Section -->
            <HBox spacing="30" alignment="CENTER" styleClass="feature-section">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <VBox spacing="15" styleClass="feature-card">
                    <Label text="How it Works" styleClass="feature-title"/>
                    <Label text="Submit your application online and get instant risk assessment with personalized recommendations." 
                           wrapText="true" styleClass="feature-description"/>
                </VBox>

                <VBox spacing="15" styleClass="feature-card">
                    <Label text="Why Use LoanShield" styleClass="feature-title"/>
                    <Label text="Fast processing, accurate risk evaluation, and compliance with Sri Lankan banking regulations for better loan decisions." 
                           wrapText="true" styleClass="feature-description"/>
                </VBox>

                <VBox spacing="15" styleClass="feature-card">
                    <Label text="Secure and Paperless" styleClass="feature-title"/>
                    <Label text="Bank-grade security, encrypted data transmission, and a fully paperless process." 
                           wrapText="true" styleClass="feature-description"/>
                </VBox>
            </HBox>

            <!-- FORM SECTION - Centered Cards -->
            <VBox spacing="30" alignment="TOP_CENTER" maxWidth="800">

                <!-- Grouped Forms Section -->
                <VBox spacing="24" styleClass="grouped-form-section">

                    <!-- Personal Information Card -->
                    <VBox styleClass="form-card" spacing="25">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <Label text="Personal Information" styleClass="section-title" />

                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Full Name *" styleClass="field-label"/>
                            <TextField fx:id="fullNameField" styleClass="modern-field" promptText="Enter your full name"/>
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="NIC Number *" styleClass="field-label"/>
                            <TextField fx:id="nicField" styleClass="modern-field" promptText="123456789V"/>
                        </VBox>
                    </HBox>

                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Phone Number *" styleClass="field-label"/>
                            <TextField fx:id="mobileField" styleClass="modern-field" promptText="+94 77 123 4567"/>
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Email Address *" styleClass="field-label"/>
                            <TextField fx:id="emailField" styleClass="modern-field" promptText="your.email@example.com"/>
                        </VBox>
                    </HBox>
                    </VBox>

                    <!-- Employment and Job Details Card -->
                    <VBox styleClass="form-card" spacing="25">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <Label text="Employment and Job Details" styleClass="section-title" />

                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Duration of Employment *" styleClass="field-label"/>
                            <TextField fx:id="employmentDurationField" styleClass="modern-field" promptText="2 years" />
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Monthly Income (LKR) *" styleClass="field-label"/>
                            <TextField fx:id="monthlyIncomeField" styleClass="modern-field" promptText="LKR 120,000" />
                        </VBox>
                    </HBox>
                    </VBox>

                    <!-- Loan Request Details Card -->
                    <VBox styleClass="form-card" spacing="25">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <Label text="Loan Request Details" styleClass="section-title" />

                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Requested Loan Amount (LKR) *" styleClass="field-label"/>
                            <TextField fx:id="requestedLoanAmountField" styleClass="modern-field" promptText="2,500,000" />
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Loan Term (Years) *" styleClass="field-label"/>
                            <ComboBox fx:id="loanTermCombo" styleClass="modern-combo" />
                        </VBox>
                    </HBox>
                    </VBox>

                    <!-- Financial and Credit Information Card -->
                    <VBox styleClass="form-card" spacing="25">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>
                    
                    <Label text="Financial and Credit Information" styleClass="section-title" />

                    <VBox spacing="20">
                        <VBox spacing="15">
                            <Label text="Do you have any existing loans? *" styleClass="field-label"/>
                            <HBox spacing="30">
                                <RadioButton fx:id="existingLoansYes" text="Yes" styleClass="modern-radio" selected="true" onAction="#handleExistingLoansSelection"/>
                                <RadioButton fx:id="existingLoansNo" text="No" styleClass="modern-radio" onAction="#handleExistingLoansSelection"/>
                            </HBox>
                        </VBox>

                        <!-- Conditional fields for existing loans -->
                        <VBox fx:id="existingLoansFields" spacing="20" visible="true">
                            <HBox spacing="20">
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <Label text="Total Outstanding Loan Amount (LKR) *" styleClass="field-label"/>
                                    <TextField fx:id="totalOutstandingAmount" styleClass="modern-field" promptText="0" text="LKR 450,000"/>
                                </VBox>
                                
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <Label text="Monthly Loan Installments (LKR) *" styleClass="field-label"/>
                                    <TextField fx:id="monthlyInstallments" styleClass="modern-field" promptText="0" text="LKR 36,500"/>
                                </VBox>
                            </HBox>
                        </VBox>

                        <!-- Credit Score -->
                        <HBox spacing="20">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Credit Score (CRIB) *" styleClass="field-label"/>
                                <TextField fx:id="creditScore" styleClass="modern-field" promptText="Enter your credit score" text="750"/>
                            </VBox>
                            <VBox HBox.hgrow="ALWAYS">
                                <!-- Empty space to balance the layout -->
                            </VBox>
                        </HBox>
                    </VBox>

                </VBox>
                </VBox>

                <HBox spacing="20" alignment="CENTER">
                    <Button text="Submit Application" styleClass="submit-button" onAction="#handleNextButton"/>
                </HBox>

            </VBox>

            <!-- Risk Score Dashboard -->
            <VBox styleClass="risk-score-container" spacing="30">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                <Label text="Risk Assessment Results" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #f8fafc;"/>

                <HBox spacing="40" alignment="CENTER">
          
                    <!-- Main Score Circle -->
                    <VBox alignment="CENTER" spacing="15" styleClass="main-score-section">
                        <VBox styleClass="score-circle" alignment="CENTER" spacing="5">
                            <Label text="78" styleClass="main-score"/>
                            <Label text="Risk Score" styleClass="score-label"/>
                        </VBox>
                        <Label text="Good Risk Profile" styleClass="profile-title"/>
                        <Label text="Your application shows a strong financial profile with manageable risk factors." 
                               wrapText="true" styleClass="profile-description" maxWidth="200"/>
                    </VBox>
                    

                    <!-- Score Breakdown Cards -->
                    <VBox spacing="15">
                        <HBox spacing="15">
                            <VBox styleClass="score-card income-card" spacing="10">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Income Score" styleClass="score-title"/>
                                    <Label text="85" styleClass="score-value"/>
                                </HBox>
                                <ProgressBar progress="0.85" styleClass="income-progress"/>
                                <Label text="Stable income with good earning capacity" 
                                       wrapText="true" styleClass="score-description"/>
                            </VBox>

                            <VBox styleClass="score-card debt-card" spacing="10">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Debt Burden" styleClass="score-title"/>
                                    <Label text="72" styleClass="score-value"/>
                                </HBox>
                                <ProgressBar progress="0.72" styleClass="debt-progress"/>
                                <Label text="Moderate existing debt obligations" 
                                       wrapText="true" styleClass="score-description"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15">
                            <VBox styleClass="score-card credit-card" spacing="10">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Credit Rating" styleClass="score-title"/>
                                    <Label text="80" styleClass="score-value"/>
                                </HBox>
                                <ProgressBar progress="0.80" styleClass="credit-progress"/>
                                <Label text="Good credit history and payment behavior" 
                                       wrapText="true" styleClass="score-description"/>
                            </VBox>

                            <VBox styleClass="score-card employment-card" spacing="10">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Employment" styleClass="score-title"/>
                                    <Label text="75" styleClass="score-value"/>
                                </HBox>
                                <ProgressBar progress="0.75" styleClass="employment-progress"/>
                                <Label text="Stable employment with good tenure" 
                                       wrapText="true" styleClass="score-description"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                </HBox>
            </VBox>
        
        </VBox>
    </content>
</ScrollPane>