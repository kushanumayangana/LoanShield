<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.LoginController"
            prefWidth="1280" prefHeight="720"
            styleClass="login-root"
            stylesheets="@/css/style.css">
    <center>
        <HBox alignment="CENTER" spacing="48" styleClass="login-layout">
            <VBox alignment="CENTER_LEFT" spacing="18" styleClass="login-hero" prefWidth="560" maxWidth="600">
                <Label text="Welcome LoanShield" wrapText="true" maxWidth="560" styleClass="login-title"/>
                <Label text="Sign in to monitor portfolios, manage client risk, and approve decisions with confidence." wrapText="true" maxWidth="560" styleClass="login-subtitle"/>
               
            </VBox>
            <VBox spacing="18" alignment="CENTER" styleClass="form-card login-card">
                <Label text="Sign In" styleClass="login-card-title"/>
                <TextField fx:id="usernameField" promptText="Username" styleClass="login-field"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-field"/>
                <HBox spacing="12" alignment="CENTER" styleClass="login-actions">
                    <Button text="Login" onAction="#handleLogin" styleClass="login-primary"/>
                    <Button text="Create account" onAction="#handleGoRegister" styleClass="login-secondary"/>
                </HBox>
                <Label fx:id="messageLabel" styleClass="login-message"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
