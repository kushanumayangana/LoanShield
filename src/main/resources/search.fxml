<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.SearchController"
            style="-fx-background-color: linear-gradient(to bottom, #3b82f6, #1d4ed8);">
    <top>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Label text="Search Applications" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
            <HBox spacing="12" alignment="CENTER" maxWidth="600">
                <TextField fx:id="searchField" promptText="Enter NIC to search" prefWidth="300" 
                           style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 10 15; -fx-font-size: 14px;" HBox.hgrow="ALWAYS"/>
                <Button text="Search" onAction="#handleSearch" 
                        style="-fx-background-color: #1d4ed8; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25; -fx-font-size: 14px; -fx-cursor: hand;"/>
                <Button text="Back" onAction="#handleBack" 
                        style="-fx-background-color: #475569; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25; -fx-font-size: 14px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox spacing="20" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="40" bottom="40" left="40"/>
            </padding>
            <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS" minHeight="400" 
                       style="-fx-background-color: white; -fx-background-radius: 15;">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="colId" text="ID" minWidth="50"/>
                    <TableColumn fx:id="colNic" text="NIC" minWidth="100"/>
                    <TableColumn fx:id="colFullName" text="Full Name" minWidth="150"/>
                    <TableColumn fx:id="colMonthlyIncome" text="Income" minWidth="100"/>
                    <TableColumn fx:id="colLoanAmount" text="Loan Amt" minWidth="100"/>
                    <TableColumn fx:id="colLoanTerm" text="Term" minWidth="60"/>
                    <TableColumn fx:id="colStatus" text="Status" minWidth="100"/>
                    <TableColumn fx:id="colRisk" text="Risk" minWidth="60"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
