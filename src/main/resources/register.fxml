<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.RegisterController"
            prefWidth="1280" prefHeight="720"
            styleClass="register-root"
            stylesheets="@/css/style.css">
    <center>
        <HBox alignment="CENTER" spacing="48" styleClass="register-layout">
            <StackPane alignment="CENTER_LEFT" styleClass="register-hero" prefWidth="560" maxWidth="640">
                <Region styleClass="register-hero-canvas" StackPane.alignment="CENTER" />
                <VBox alignment="CENTER_LEFT" spacing="22" styleClass="register-hero-content" StackPane.alignment="CENTER_LEFT" maxWidth="520">
                    <VBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Welcome to LoanShield" wrapText="true" maxWidth="520" styleClass="register-title"/>
                        <Label text="Open your secure lending workspace. Track applications, monitor risk, and collaborate faster than ever." wrapText="true" maxWidth="520" styleClass="register-subtitle"/>
                    </VBox>
                    <HBox spacing="18" alignment="CENTER_LEFT" styleClass="register-hero-metrics">
                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="register-metric-card">
                            <Label text="Applications" styleClass="register-metric-title"/>
                            <Label text="1,248" styleClass="register-metric-value"/>
                            <Label text="Active pipeline across consumer, SME, and partner-originated deals." wrapText="true" styleClass="register-metric-note"/>
                        </VBox>
                        <VBox spacing="8" alignment="CENTER_LEFT" styleClass="register-metric-card">
                            <Label text="Decision Speed" styleClass="register-metric-title"/>
                            <Label text="&lt; 4 hrs" styleClass="register-metric-value"/>
                            <Label text="Automated scoring cuts manual underwriting loops to minutes." wrapText="true" styleClass="register-metric-note"/>
                        </VBox>
                    </HBox>
                    <VBox spacing="10" alignment="CENTER_LEFT" styleClass="register-hero-highlights" maxWidth="520">
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="•" styleClass="register-highlight-bullet"/>
                            <Label text="Configurable approval policies with full audit trail for regulatory teams." wrapText="true" styleClass="register-highlight-text"/>
                        </HBox>
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="•" styleClass="register-highlight-bullet"/>
                            <Label text="Portfolio health dashboards keep credit, risk, and ops aligned in real time." wrapText="true" styleClass="register-highlight-text"/>
                        </HBox>
                    </VBox>
                </VBox>
            </StackPane>
            <VBox spacing="18" alignment="CENTER" styleClass="form-card register-card">
                <Label text="Create Account" styleClass="register-card-title"/>
                <TextField fx:id="usernameField" promptText="Username" styleClass="register-field"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="register-field"/>
                <PasswordField fx:id="secretKeyField" promptText="Secret key" styleClass="register-field"/>
                <HBox spacing="12" alignment="CENTER" styleClass="register-actions">
                    <Button text="Register" onAction="#handleRegister" styleClass="register-primary"/>
                    <Button text="Back to Login" onAction="#handleBack" styleClass="register-secondary"/>
                </HBox>
                <Label fx:id="messageLabel" styleClass="register-message"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
