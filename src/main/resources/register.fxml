<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.controller.RegisterController"
            prefWidth="1280" prefHeight="720"
            styleClass="register-root"
            stylesheets="@/css/style.css">
    <center>
        <HBox alignment="CENTER" spacing="48" styleClass="register-layout">
            <StackPane alignment="CENTER" styleClass="register-hero" prefWidth="560" maxWidth="640">
                <Region styleClass="register-hero-canvas" StackPane.alignment="CENTER" />
                <VBox spacing="30" alignment="CENTER" StackPane.alignment="CENTER" styleClass="register-hero-inner">
                  
                    <StackPane styleClass="register-hero-illustration" prefWidth="260" maxWidth="300" minWidth="240">
                        <VBox alignment="CENTER" spacing="18">
                            <StackPane alignment="CENTER">
                                <Region styleClass="illustration-glow" prefWidth="260" prefHeight="170" maxWidth="260" maxHeight="170"/>
                                <Region styleClass="illustration-card" prefWidth="220" prefHeight="140" maxWidth="220" maxHeight="140"/>
                                <HBox alignment="CENTER_LEFT" spacing="18">
                                    <padding>
                                        <Insets top="20" right="18" bottom="20" left="20"/>
                                    </padding>
                                    <VBox styleClass="illustration-avatar" alignment="CENTER" spacing="4" prefWidth="64" prefHeight="64" maxWidth="64" maxHeight="64">
                                        <Region styleClass="illustration-avatar-head" prefWidth="22" prefHeight="22"/>
                                        <Region styleClass="illustration-avatar-body" prefWidth="44" prefHeight="24"/>
                                    </VBox>
                                    <VBox spacing="12" alignment="CENTER_LEFT">
                                        <Region styleClass="illustration-line-strong" prefWidth="120" prefHeight="9" maxWidth="140" maxHeight="12"/>
                                        <Region styleClass="illustration-line" prefWidth="150" prefHeight="6" maxWidth="160" maxHeight="8"/>
                                        <Region styleClass="illustration-line" prefWidth="125" prefHeight="6" maxWidth="130" maxHeight="8"/>
                                    </VBox>
                                </HBox>
                            </StackPane>
                            <HBox spacing="10" alignment="CENTER">
                                <Region styleClass="illustration-dot" prefWidth="10" prefHeight="10"/>
                                <Region styleClass="illustration-dot" prefWidth="10" prefHeight="10"/>
                                <Region styleClass="illustration-dot" prefWidth="10" prefHeight="10"/>
                            </HBox>
                        </VBox>
                    </StackPane>
                </VBox>
            </StackPane>
            <VBox spacing="18" alignment="CENTER" styleClass="form-card register-card">
                <Label text="Create Account" styleClass="register-card-title"/>
                <TextField fx:id="usernameField" promptText="Username" styleClass="register-field"/>
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="register-field"/>
                <PasswordField fx:id="secretKeyField" promptText="Secret key" styleClass="register-field"/>
                <HBox spacing="12" alignment="CENTER" styleClass="register-actions">
                    <Button text="Register" onAction="#handleRegister" styleClass="register-primary"/>
                    <Button text="Back to Login" onAction="#handleBack" styleClass="register-secondary"/>
                </HBox>
                <Label fx:id="messageLabel" styleClass="register-message"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
